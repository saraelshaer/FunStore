@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
    Layout = "layout3";
}

<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h2 style="color: #b32400 ; padding: 10px">Category List</h2>

<a asp-action="Create" class="btn btn-outline-dark mb-2" style="margin:0 100px">Create New Category</a>

<table class="table table-bordered  table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>