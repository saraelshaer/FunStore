@model Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "layout3";
}

<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h2 style="color: #b32400 ; padding: 10px">Edit Category</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label text-black"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label text-black"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-sm btn-danger">Save Changes</button>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
