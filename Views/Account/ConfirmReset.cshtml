
@{
    ViewData["Title"] = "Password Reset";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Password Reset</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .reset-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff3cd;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .reset-container .email-icon {
                font-size: 50px;
                color: #343a40;
                margin-bottom: 10px;
            }

            .reset-container .btn-reset {
                background-color: #ffc107;
                color: white;
                border: none;
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                margin-top: 20px;
            }

                .reset-container .btn-reset:hover {
                    background-color: #e0a800;
                }

            .reset-container .footer-text {
                margin-top: 20px;
                font-size: 14px;
            }
    </style>
</head>
<body>

    <div class="reset-container">
        <div class="email-icon">
            <i class="fas fa-envelope"></i>
        </div>
        <h3>Check Your Email</h3>
        <p>We've just sent instructions to reset your password to <strong>@ViewBag.Email</strong>. Follow the next steps in that email.</p>
        <br />
        <form asp-action="Reset" method="get">
            <input type="submit"  class="btn btn-outline-dark mb-4 h-25 "value="Send Reset Instructions Again" />
        </form>
        

        <div class="footer-text">
            If you don't see the email, please check your spam folder.
            <br>
            
        </div>
    
    </div>



</body>
</html>



