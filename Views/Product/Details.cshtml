
@model Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "AdminLayout";
}


<br />
<br />
<br />
<h2 style="padding: 10px; text-align: center;">Product Details</h2>

<div class="container p-4 border rounded shadow-sm bg-light">
    <div class="row">
        <!-- Product Image Section -->
        <div class="col-md-5 text-center">
            <img src="~/productImages/@Model.ImageFileName" alt="@Model.Name" class="img-fluid img-thumbnail" style="width:400px; height:500px;" />
        </div>

        <!-- Product Information Section -->
        <div class="col-md-7">
            <div class="form-group mb-3">
                <label class="fw-bold">Name:</label>
                <p class="form-control-static">@Model.Name</p>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Description:</label>
                <p class="form-control-static">@Model.Description</p>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Price:</label>
                <p class="form-control-static">@Model.Price.ToString("C")</p>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Stock Quantity:</label>
                <p class="form-control-static">@Model.StockQuantity</p>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Category:</label>
                <p class="form-control-static">@Model.Category.Name</p>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Created At:</label>
                <p class="form-control-static">@Model.CreatedAt.ToString("g")</p>
            </div>

            <div class="text-center mt-4">
                <a asp-action="AdminIndex" class="btn btn-primary btn-lg px-4 ms-2">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg px-4 ms-2">Edit</a>
            </div>
        </div>
    </div>
</div>
