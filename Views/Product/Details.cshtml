
@model Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "layout3";
}

<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h2 style="color: #b32400 ; padding: 10px">Product Details</h2>

<div class="form-group">
    <label>Name:</label>
    <p class="form-control-static">@Model.Name</p>
</div>

<div class="form-group">
    <label>Description:</label>
    <p class="form-control-static">@Model.Description</p>
</div>

<div class="form-group">
    <label>Price:</label>
    <p class="form-control-static">@Model.Price.ToString("C")</p>
</div>

<div class="form-group">
    <label>Stock Quantity:</label>
    <p class="form-control-static">@Model.StockQuantity</p>
</div>

<div class="form-group">
    <label>Image File Name:</label>
    <p class="form-control-static">@Model.ImageFileName</p>
</div>

<div class="form-group">
    <label>Product Image:</label>
    <img src="~/images/@Model.ImageFileName" alt="@Model.Name" class="img-thumbnail" />
</div>


<div class="form-group">
    <label>Category:</label>
    <p class="form-control-static">@Model.Category.Name</p>
</div>

<div class="form-group">
    <label>Created At:</label>
    <p class="form-control-static">@Model.CreatedAt.ToString("g")</p> 
</div>


<a asp-action="Index" class="btn btn-sm btn-danger">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">Edit</a>


