@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
    Layout = "AdminLayout";
}

<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<div class="main-content">
    <div class="container-fluid">
        <h2 class="mb-4">Product List</h2>
        <a asp-action="Create" class="btn btn-success">Create New Product</a>
        <br />
        <br />
        <table class="table table-bordered  table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Image</th>
                    <th>Category</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.StockQuantity</td>
                        <td>
                            <img src="~/images/@product.ImageFileName" alt="@product.Name" style="max-width: 100px;" />
                        </td>
                        <td>@product.Category.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info"> <i class="fas fa-eye"></i> View</a>
                            <a href="javascript:void(0)" class="btn btn-danger" onclick="confirmDelete('@product.Id', '@Url.Action("Delete", new { id = product.Id })')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts
{
    <script>
        function confirmDelete(userId, deleteUrl) {
            Swal.fire({
                title: "Delete Product",
                text: "Are you sure about deleting this product ?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Delete it",
                cancelButtonText: "Cancel",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = deleteUrl;
                }
            });
        }
    </script>

}


