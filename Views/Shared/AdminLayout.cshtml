@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Custom CSS -->
    <style>
        body {
          font-family: 'Arial', sans-serif;
        }

        .sidebar {
          height: 100vh;
          position: fixed;
          background-color: #343a40;
          padding: 20px;
          width: 280px;

        }

        .sidebar a {
          color: #fff;
          text-decoration: none;
          display: block;
          padding: 10px;
          margin-bottom: 10px;
          border-radius: 5px;
        }

        .sidebar a:hover {
          background-color: #007bff;
        }

        .main-content {
          margin-left: 270px;
          padding: 20px;
        }

        .card {
          margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #dc3545; /* Bootstrap default */
            border: none;
            padding: 8px 15px;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
                color:black;
            }

        .btn-warning {
            background-color: #ffc107; /* Bootstrap default */
            border: none;
            padding: 8px 15px;
            color: white;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .btn-info {
            background-color: #17a2b8; /* Bootstrap default */
            border: none;
            padding: 8px 15px;
            color: white;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .btn-success {
            background-color: #28a745; /* Bootstrap default */
            border: none;
            padding: 8px 15px;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }


    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-white mb-4" style="	text-transform: capitalize;">Welecom  @User.FindFirst(ClaimTypes.Name)?.Value <i class="fa-regular fa-face-smile-beam  fa-lg" style="color: #ededed;"></i></h4>
        @*      <div class="row mb-5">
           
           @*  <div class="col-4">
                <img src="/userImages/@TempData.Peek("ImageProfile")?.ToString()" class="rounded-circle img-fluid" style="width: 60px; height: 36px;">
            </div> 
            
            <div class="col-8 d-flex align-items-center">
                <span style="color:white;">Welecom  @User.FindFirst(ClaimTypes.Name)?.Value  <i class="fa-regular fa-face-smile-beam  fa-lg" style="color: #ededed;"></i></span>
            </div>
        </div> *@
        @* <img src="/userImages/@TempData.Peek("ImageProfile")?.ToString()" class="rounded-circle img-fluid" style="width: 40px; height: 36px;"> *@
        <a asp-action="dashboard" asp-controller="home"><i class="fa-solid fa-chart-line fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Dashboard</a>
        <a asp-action="index" asp-controller="order"><i class="fa-solid fa-truck-fast" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Orders</a>
        <a asp-action="AdminIndex" asp-controller="product"><i class="fa-solid fa-box fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Products</a>
        <a asp-action="index" asp-controller="category"><i class="fa-solid fa-boxes-stacked fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Categories</a>
        <a asp-action="index" asp-controller="user"><i class="fa-solid fa-users fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Users</a>
        <a asp-action="index" asp-controller="role"><i class="fa-regular fa-square-check fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Roles</a>
        <a asp-action="index" asp-controller="home"><i class="fa-solid fa-shop fa-sm" style="color: #ededed;"></i>&nbsp;&nbsp;&nbsp;Website</a>

    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/lib/jquery/dist/jquery.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
