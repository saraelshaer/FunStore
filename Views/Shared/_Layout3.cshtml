
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/assets/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="/assets/css/myStyle.css" rel="stylesheet" />



</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="home" asp-action="index">
                <strong>
                    <h3>
                        <i class="fa-solid fa-couch fa-bounce" style="color: #0a5d5d;"></i>&nbsp;FunStore
                    </h3>
                    
                </strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="home" asp-action="index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="product" asp-action="index">Products</a></li>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="home" asp-action="dashboard">Dashboard</a></li>
                    }
               

                    @* <li class="nav-item"><a class="nav-link" href="#!">About</a></li> *@
                 @*    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#!">All Products</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="#!">Popular Items</a></li>
                            <li><a class="dropdown-item" href="#!">New Arrivals</a></li>
                        </ul>
                    </li> *@

         
                </ul>




                <div class="nav-icons">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="account" asp-action="login" class="btn btn-outline-dark me-3">
                            <i class="fa fa-sign-in-alt"></i> Sign In
                        </a>
                    }
                    @* <a href="#"><i class="fa-solid fa-magnifying-glass" style="color: #1c1e21;"></i></a> *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dropdown for User Icon -->
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user" style="color: #1c1e21;"></i>
                            </a>

                            <!-- Dropdown Menu -->
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="user" asp-action="Edit" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value">
                                        <i class="fa fa-user" style="color: #3b3f44;"></i>&nbsp;&nbsp;&nbsp;Profile
                                    </a>
                                </li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-truck-fast" style="color: #3b3f44;"></i>&nbsp;&nbsp;&nbsp;Orders</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa fa-gear" style="color: #3b3f44;"></i>&nbsp;&nbsp;&nbsp;Settings</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa fa-circle-question" style="color: #3b3f44;"></i>&nbsp;&nbsp;&nbsp;Help</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="account" asp-action="logout"><i class="fa fa-arrow-right-from-bracket" style="color:#3b3f44;"></i>&nbsp;&nbsp;&nbsp;Logout</a></li>
                            </ul>
                        </div>
                    }


                    <!-- Icons for Wishlist and Cart -->
                    <a href="#"><i class="fa-regular fa-heart fa-lg" style="color: #1c1e21;"></i> <span class="badge">0</span></a>
                    <a href="#"><i class="fa-solid fa-cart-shopping fa-lg" style="color: #1c1e21;"></i> <span class="badge">1</span></a>
                </div>

        


            </div>
        </div>
    </nav>

    <!-- Header-->


    <!-- Main Content Section-->

    @RenderBody()


    <br />
    <br />
    <br />
    <br />

    <!-- Footer-->
    <footer style="background-color:#f5f5f5;" class="py-5 ">
        <div class="container">
            <p class="m-0 text-center ">Copyright &copy;<strong> FunStore 2024</strong></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/assets/js/scripts.js"></script>
</body>

</html>
